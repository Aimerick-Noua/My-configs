1-CONFIGURE CSS IMPORT MODULE SNIPPET .......................................6
2-AUTO IMPORT REACT CODE SNIPPET WITHOUT REACT LIBRARY IMPORT ...............16


################################################################################################################################################################################
CONFIGURE CSS IMPORT MODULE SNIPPET
"importCSSModule": {
		"prefix": "csm",
		"scope": "javascript,typescript,javascriptreact",
		"body": ["import styles from './${TM_FILENAME_BASE}.module.css'"],
		"description": "Import CSS Module as `styles`"
	  },
################################################################################################################################################################################

**************************************************************************************************************************
Auto import snippet code without importing react library to component

		"ReactFunctionalComponent": {
		  "prefix": "rfce",
		  "body": [
			"function ${TM_FILENAME_BASE/(.*)/${1:/capitalize}/}() {",
			"\treturn (",
			"\t\t<div>$1</div>",
			"\t);",
			"}",
			"",
			"export default ${TM_FILENAME_BASE/(.*)/${1:/capitalize}/};"
		  ],
		  "description": "Generate React functional component"
		}

*************************************************************************************************************************








